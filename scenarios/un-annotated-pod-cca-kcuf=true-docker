# Settings

minikube start --container-runtime=docker

datadog-values.yaml:
  logs:
    enabled: true
    containerCollectAll: true
    #containerCollectUsingFiles: true  // kcuf, default

k run bash --image=bash \
	--command -- bash -c 'while true; do date; sleep 1; done'

